
<%- include('partials/header') %>

<div id="myModal" style="margin-bottom: 14rem;
align-items: center;
margin-top: 5rem;
" >
<div class="row mt-5">

  <div class="col-md-6 m-auto">
    <div class="row" style="margin-bottom: 1rem; margin-left: 9rem;"><h2>Hello, <%= user.firstName %> <%= user.lastName %></h2></div>

    <div class="card card-body">

      <h3 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Submit a comment</h3>
      <% include ./partials/messages %>
     
      <form action="/comments" method="POST">
        <div class="form-group">
          <label for="courseCode">Course Code</label>
          <input
            type="courseCode"
            id="courseCode"
            name="courseCode"
            class="form-control"
            placeholder="Enter Course Code"
            value="<%= typeof courseCode != 'undefined' ? courseCode : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="courseName">Course Name</label>
          <input
            type="courseName"
            id="courseName"
            name="courseName"
            class="form-control"
            placeholder="Enter Course Name"
            value="<%= typeof courseName != 'undefined' ? courseName : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="program">Program</label>
          <input
            type="program"
            id="program"
            name="program"
            class="form-control"
            placeholder="Enter Program"
            value="<%= typeof program != 'undefined' ? program : '' %>"
          />
        </div>
        <div class="form-group">
            <label for="semester">Semester</label>
            <input
              type="semester"
              id="semester"
              name="semester"
              class="form-control"
              placeholder="Enter Semester"
              value="<%= typeof semester != 'undefined' ? semester : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="comment">Comment</label>
            <textarea type="comment" name="comment" id="comment" cols="30" rows="10" class="form-control" placeholder="Enter comment here..." value="<%= typeof comment != 'undefined' ? comment : '' %>"></textarea>
        <button type="submit" class="btn btn-primary btn-block">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>

</div>
<%- include('partials/footer') %>
