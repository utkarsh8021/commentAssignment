
<%- include('partials/header') %>
<div id="myModal" style="margin-bottom: 14rem;
align-items: center;
margin-top: 3rem;
" >

<div class="row mt-5">

  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login as Admin</h1>
      <% include ./partials/messages %>
      <form action="/users/login/admin"  method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead" style="font-size: 1rem; font-weight: 600;">
        <a href="/">Back to Home</a>
       </p>

     
    </div>
  </div>
</div>

</div>

<%- include('partials/footer') %>
